    <property name="validators">
      <map>
        <entry key="beforeSave">
          <list>
            <bean class="org.springframework.data.rest.test.webmvc.PersonValidator"/>
          </list>
        </entry>
      </map>
    </property>
  </bean>
  -->

</beans>